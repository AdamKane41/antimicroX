{
    "app-id": "com.github.juliagoda.antimicroX",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.11",
    "sdk": "org.kde.Sdk",
    "command": "antimicroX",
    "finish-args": [
        "--device=all",
        "--socket=x11",
        "--socket=fallback-x11",
        "--share=ipc",
        "--share=network",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--comment= I placed system-bus because using --log-system-bus didn't show anything to me. Maybe it will show something to someone else",
        "--socket=system-bus"
    ],
    "modules": [
        {
            "name": "antimicroX",
            "buildsystem": "cmake",
            "builddir": true,
            "config-opts": [
                "-DAPPDATA=ON",
                "-DUSE_SDL_2=ON",
                "-DWITH_UINPUT=ON",
                "-DWITH_XTEST=ON",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [
            {
                "type": "git",
                "url": "https://github.com/juliagoda/antimicroX.git",
                "tag": "2.24.2"
            }]
        }
    ]
}
